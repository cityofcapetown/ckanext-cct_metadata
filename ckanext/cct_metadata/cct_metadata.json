{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "Schema for the City of Cape Town",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2020 Service Requests"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ],
  "dataset_fields": [
    {
      "label": "Unique ID",
      "field_name": "name",
      "help_text": "Dataset unique ID",
      "required": true,
      "preset": "dataset_slug"
    },
    {
      "label": "Data Set Name",
      "field_name": "title",
      "help_text": "A name given to the dataset.",
      "required": true,
      "preset": "title"
    },
    {
      "label": "Data Set Description",
      "field_name": "notes",
      "help_text": "A summary of the dataset.",
      "required": false,
      "form_snippet": "markdown.html"
    },
    {
      "label": "Data Quality",
      "field_name": "data_quality",
      "help_text": "Subjective assessment of dataset quality.",
      "required": false
    },
    {
      "label": "Update Frequency",
      "field_name": "update_frequency",
      "help_text": "How often is data updated in the data set?",
      "required": false,
      "preset": "select",
      "choices": [
        {
          "label": "Historical",
          "value": "historical"
        },
        {
          "label": "Event-based",
          "value": "event-based"
        }
      ]
    },
    {
      "label": "Data Access Rights",
      "field_name": "data_access_rights",
      "help_text": "Indicates the classification of the dataset in terms of access",
      "required": true,
      "preset": "select",
      "choices": [
        {
          "label": "Open Public",
          "value": "open_public"
        },
        {
          "label": "Internal Open",
          "value": "internal_open"
        },
        {
          "label": "Internal Restricted",
          "value": "internal_restricted"
        },
        {
          "label": "Secret",
          "value": "secret"
        }
      ]
    },
    {
      "label": "Restricted Reason",
      "field_name": "restricted_reason",
      "help_text": "To be completed if the data is indicated as Restricted",
      "required": false
    },
    {
      "label": "Data Type",
      "field_name": "data_type",
      "help_text": "",
      "required": false,
      "preset": "select",
      "choices": [
        {
          "label": "Transactional",
          "value": "transactional"
        },
        {
          "label": "Master Data",
          "value": "master"
        },
        {
          "label": "Reference",
          "value": "reference"
        }
      ]
    },
    {
      "label": "Data Format",
      "field_name": "data_format",
      "help_text": "Provides an indication of the interoperable structure of the data as reflected by the primary file format in which the system exports data",
      "required": false,
      "preset": "resource_format_autocomplete"
    },
    {
      "label": "Data Steward",
      "field_name": "maintainer",
      "help_text": "Indicates the individual who assumes business accountability for the dataset in relation to aspects such as access, quality, integrity, completeness.",
      "required": false,
      "display_property": "dc:contributor"
    },
    {
      "field_name": "maintainer_email",
      "label": "Data Steward Email",
      "form_placeholder": "Sipho.Dlamini@capetown.gov.za",
      "display_property": "dc:contributor",
      "display_snippet": "email.html",
      "display_email_name_field": "maintainer"
    },
    {
      "label": "Data Steward Org Unit",
      "field_name": "ds_org_unit",
      "help_text": "Indicates the organisational unit of the data steward. This organisational unit effectively \"owns\" the dataset",
      "required": false,
      "preset": "dataset_organization"
    },
    {
      "label": "Technical Reference",
      "field_name": "technical_reference",
      "help_text": "Indicates the official who works most closely with and can best provide additional information about the data and metadata",
      "required": false
    },
    {
      "field_name": "technical_reference_email",
      "label": "Technical Reference Email",
      "form_placeholder": "Sipho.Dlamini@capetown.gov.za",
      "display_property": "dc:contributor",
      "display_snippet": "email.html",
      "display_email_name_field": "data_contact_"
    },
    {
      "label": "Data Custodian",
      "field_name": "publisher",
      "help_text": "Indicates the individual who is responsible for the technical management of the date e.g. the hosting and serving of the data",
      "required": false,
      "display_property": "dc:publisher"
    },
    {
      "field_name": "publisher_email",
      "label": "Data Custodian Email",
      "form_placeholder": "Sipho.Dlamini@capetown.gov.za",
      "display_property": "dc:contributor",
      "display_snippet": "email.html",
      "display_email_name_field": "publisher"
    },
    {
      "label": "Host System Name",
      "field_name": "host_system_name",
      "help_text": "Unique Name of the application in which the data is stored (primary/source system)",
      "required": false
    },
    {
      "label": "Host System Vendor",
      "field_name": "host_system_vendor",
      "help_text": "Type of the application in which the data is stored. Might refer to the vendor of the System.",
      "required": false,
      "preset": "select",
      "choices": [
        {
          "label": "ESRI",
          "value": "esri"
        },
        {
          "label": "SAP",
          "value": "sap"
        },
        {
          "label": "Other",
          "value": "other"
        },
        {
          "label": "Microsoft",
          "value": "microsoft"
        },
        {
          "label": "Microsoft",
          "value": "microsoft"
        }
      ]
    }
  ]
}